@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: dimgrey; 
            margin: 0;
            padding: 0;
        }

        .text-center {
            text-align: center;
            padding: 100px 0;
        }

        .display-4 {
            font-size: 36px;
            color: #333;
            margin-bottom: 20px;
        }

        .book-image {
            border-radius: 8px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        }

        .container {
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.2);
            padding: 30px;
            max-width: 600px;
            margin: 0 auto;
        }
    </style>
</head>
<body>
    <div class="container text-center">
        <h1 class="display-4">Welcome to the Book Store</h1>
        <img class="book-image" src="https://picsum.photos/id/24/300/150" alt="Book Image 1" width="300" height="150">
    </div>
</body>
</html>
